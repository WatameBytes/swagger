requestBody:
  description: Assertion finish request containing a public key credential.
  required: true
  content:
    application/json:
      schema:
        type: object
        description: Object containing assertion details for WebAuthn.
        properties:
          assertionId:
            type: string
            description: Unique identifier for the assertion request.
            example: "bd00fc5d-9e43-4c86-99cb-cdf50e89cc4d"
          publicKeyCredentialJson:
            type: string
            description: Stringified JSON representation of a public key credential object.
            example: >-
              {
                "type": "public-key",
                "id": "CyGXPVzBF_jv_AXA_0ekC34Eku_fVOJh_OGdA9R4zU8",
                "rawId": "CyGXPVzBF_jv_AXA_0ekC34Eku_fVOJh_OGdA9R4zU8",
                "response": {
                  "authenticatorData": "SZYN5YgOjGh0NBcPZHZgW4_krrmihjLHmVzzuoMdl2MFAAAAAQ",
                  "clientDataJSON": "eyJ0eXBlIjoid2ViYXV0aG4uZ2V0IiwiY2hhbGxlbmdlIjoi...",
                  "signature": "q5ygiwgKKrFCODHoROzf1LfJpEi7OM_JPbvXA4O1GHs...",
                  "userHandle": "Z3VpZDFndWlkMWd1aWQ"
                },
                "clientExtensionResults": {}
              }

description: Response given from the backend when the user wishes to authenticate with a passkey.
type: object
properties:
  assertionId:
    type: string
    example: "assertion123"
    description: A unique identifier for the assertion process.
  credentialGetJson:
    type: object # We return it as a string, but represent it as an object for clarity.
    description: Options for retrieving a public key credential in WebAuthn.
    properties:
      rpId:
        type: string
        example: "example.com"
        description: The RP ID the credential should be scoped to.
      challenge:
        type: string
        description: A cryptographic challenge for generating the credentialâ€™s assertion.
        example: "randomChallengeString"
      allowCredentials:
        type: array
        description: A list of credentials that are allowed to be used for the assertion.
        items:
          type: object
          properties:
            id:
              type: string
              example: "credential123"
              description: The ID of the allowed credential.
            type:
              type: string
              example: "public-key"
              description: The type of credential.
      timeout:
        type: integer
        example: 60000
        description: Time in milliseconds the caller is willing to wait for the operation to complete.
      userVerification:
        type: string
        example: "preferred"
        description: Indicates whether user verification is preferred, required, or discouraged.
      extensions:
        type: object
        description: Additional processing options for the client and authenticator.
        example: {}
